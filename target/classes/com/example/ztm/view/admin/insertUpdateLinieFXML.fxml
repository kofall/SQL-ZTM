<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="190.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ztm.aInsertUpdateLinieFXController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="150.0" prefWidth="360.0" spacing="10.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Godzina rozpoczęcia" />
                  <TextField fx:id="tf_Start" promptText="Godzina rozpoczęcia" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Godzina zakończenia" />
                  <TextField fx:id="tf_End" promptText="Godzian zakończenia" />
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#addRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Dodaj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#modifyRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Zmodyfikuj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#back" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Anuluj" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
