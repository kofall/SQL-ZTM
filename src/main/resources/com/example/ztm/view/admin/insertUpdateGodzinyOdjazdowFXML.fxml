<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ztm.aInsertUpdateGodzinyOdjazdowFXController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="110.0" prefWidth="360.0" spacing="10.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Godzina odjazdu" />
                  <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <TextField fx:id="tf_Hour" prefWidth="75.0" />
                        <Label text=":" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="tf_Minutes" prefWidth="75.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#addRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Dodaj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#modifyRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Zmodyfikuj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#back" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Anuluj" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
