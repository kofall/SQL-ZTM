<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="381.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ztm.aInsertUpdatePojazdyFXController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="330.0" prefWidth="360.0" spacing="10.0">
         <children>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Numer seryjny" />
                  <TextField fx:id="tf_Serial" promptText="Numer seryjny" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Numer rejestracyjny" />
                  <TextField fx:id="tf_Registration" promptText="Numer rejestracyjny" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Liczba miejsc stojących" />
                  <TextField fx:id="tf_StandingPlaces" promptText="Liczba miejsc siedzących" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Liczba miejsc siedzących" />
                  <TextField fx:id="tf_Seats" promptText="Liczba miejsc siedzących" />
               </children>
            </VBox>
            <VBox prefHeight="50.0" prefWidth="250.0" spacing="1.0">
               <children>
                  <Label text="Typ" />
                  <HBox alignment="CENTER_LEFT" minHeight="25.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <RadioButton fx:id="rb_Bus" mnemonicParsing="false" onMouseClicked="#updateRBs" selected="true" text="Autobus" />
                        <RadioButton fx:id="rb_Tram" mnemonicParsing="false" onMouseClicked="#updateRBs" text="Tramwaj" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#addRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Dodaj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#modifyRecord" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Zmodyfikuj" textFill="WHITE" />
                  <Button mnemonicParsing="false" onMouseClicked="#back" prefHeight="26.0" prefWidth="125.0" style="-fx-background-color: #0D8E22;" text="Anuluj" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
